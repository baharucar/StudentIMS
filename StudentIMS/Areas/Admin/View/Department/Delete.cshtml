@model Department

<div class="container col-6 border shadow">

    <div class="text-center">
        <h1 class="display-5">Delete Department Record</h1>
    </div>

    <form method="post">

        <input asp-for="Id" hidden />

        <div class="form-floating py-2">
            <input asp-for="Depart" type="text" class="form-control" disabled/>
            <label asp-for="Depart" class="form-label"></label>
        </div>
        <div class="py-2">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
    </form>
</div>
